
<% if !!flash[:notice] %>
  <% flash.each do |type, message| %>
    <p><%= message %></p> <br>
  <% end %>
<% end %>

<h4>Welcome to Acebook you are logged in as: <%= current_user.email %></h4>

<% @posts.reverse.each do |post| %>
  <div>
    <p><%= post.message %></p>
    <p><%= post.created_at.strftime("%Y/%m/%d %H:%M:%S") %></p>
    <td><%= link_to 'Update', edit_post_path(post) %></td>
    <td><button id="delete-button"><%= link_to 'Delete', post_path(post), method: :delete, data: { confirm: 'Are you sure' }%></button></td>
  </div>
<% end %>

<%= link_to new_post_path do %>
  New post
<% end %>
