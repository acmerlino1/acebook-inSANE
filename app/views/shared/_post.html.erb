<% obj.reverse.each do |post| %>
  <div class="row">
    <div class="col-xs-8 col-xs-offset-2">
      <div class="well well-lg">
    <div>
    <div class="post" >
      <div id="postmessage">
      <strong><%= post.message.gsub(/\n/, '<br/>').html_safe %></strong>
      </div>
      <br>
      <small>
      <br>    
      <br>
      <br>
        <%= User.find(post.user_id).email%><br>
        Updated <%= time_ago_in_words(post.updated_at) %> ago, <br>
        <%= post.created_at.strftime("%Y/%m/%d %H:%M:%S") %>
      </small>
      <div>
      <div>
        <% if post.created_at > 10.minutes.ago %> 
          <td><button class="button" id="update-button"><%= link_to 'Update', edit_post_path(post) %></button></td>
        <% end %>
        <td><button class="button" id="delete-button"><%= button_to 'Delete', post_path(post), method: :delete %></button></td>
      </div>
       
    </div>
  </div>
<% end %>